                    <tr>
                        <td>Actividad</td>
                        <td id="activity" style="display: block;">{{perfil.personality.activity}}</td>
                        <td id="activity_table" style="display: none;">
                            <select id="activity_edit">
                                <option value="MUY ACTIVO">MUY ACTIVO</option>
