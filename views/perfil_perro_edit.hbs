                    <tr>
                        <td>Travieso</td>
                        <td id="naughty" style="display: block;">{{perfil.personality.naughty}}</td>
                        <td id="naughty_table" style="display: none;">
                            <select id="naughty_edit">
                                <option value="BIEN">BIEN</option>
                                <option value="REGULAR">REGULAR</option>
                                <option value="MALO">MALO</option>
