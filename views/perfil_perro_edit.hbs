                        <td id="kids_table" style="display: none;">
                            <select id="kids_edit">
                                <option value="BIEN">BIEN</option>
                                <option value="REGULAR">REGULAR</option>
                                <option value="MALO">MALO</option>
                                <option value="DESCONOCIDO">DESCONOCIDO</option>
                            </select>
