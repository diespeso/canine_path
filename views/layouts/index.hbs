    <script>
        var xhr = new XMLHttpRequest();
        xhr.open("GET", "/api/ask/logged_in/");
        xhr.onload = function() {
            var json_response = JSON.parse(xhr.responseText);
            console.log(JSON.stringify(json_response))
            if(json_response.flag) {
                document.getElementById("list_perfil").style.display = "block";
                document.getElementById("list_log_out").style.display = "block";
            } else {
                document.getElementById("list_perfil").style.display = "none";
                document.getElementById("list_log_out").style.display = "none";
                document.getElementById("list_add_dog").style.display = "none";
            }

            if(json_response.user_type == "refugio") {
                document.getElementById("list_add_dog").style.display = "block";
            } else {
                document.getElementById("list_add_dog").style.display = "none";
            }
        }
        xhr.send();
    </script>

